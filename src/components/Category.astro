---
import { cn, sluglify } from '@/utils'

const { name = 'View All', activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = sluglify(name.toLowerCase())

const isActive =
	activeCategory?.toLocaleLowerCase() === unsluglifyNameCategory ||
	(currentPath === '/' && name === 'View All')
---

<a
	href={name === 'View All' ? '/' : sluglify(`/category/${unsluglifyNameCategory}/1`)}
	class={cn(
		`text-gray-600 dark:text-gray-300  pb-2.5 first-letter:uppercase font-medium hover:text-gray-800 border-b-2 border-transparent dark:hover:border-white hover:border-black transition-colors duration-150 ease-linear  `,
		isActive && `border-black text-black z-10  dark:border-white dark:text-white`
	)}
>
	{name}
</a>
