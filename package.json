{
	"name": "blog-template",
	"type": "module",
	"version": "1.1.0",
	"description": "A template for creating a blog with Astro",
	"author": "danielcgilibert",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielcgilibert/blog-template"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/danielcgilibert/blog-template/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"start": "astro dev",
		"build": "tinacms build && astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"@astrojs/rss": "4.0.14",
		"@astrojs/solid-js": "^5.1.3",
		"@netlify/blobs": "^10.5.0",
		"@netlify/functions": "^5.1.2",
		"astro": "5.16.8",
		"astro-font": "^1.1.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"solid-js": "^1.9.10"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.3.13",
		"@astrojs/sitemap": "3.6.1",
		"@astrojs/tailwind": "6.0.2",
		"@pagefind/default-ui": "^1.4.0",
		"@tailwindcss/typography": "0.5.19",
		"@tinacms/cli": "^2.0.7",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"clsx": "2.1.1",
		"eslint": "^9.39.2",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^12.25.0",
		"pagefind": "^1.4.0",
		"prettier": "^3.7.4",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "3.4.0",
		"tailwindcss": "^3",
		"tinacms": "^3.2.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	}
}
